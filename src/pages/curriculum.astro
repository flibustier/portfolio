<style>
  .timeline,
  .timeline-event,
  .timeline-event-copy {
    position: relative;
  }

  .timeline {
    margin: 4rem auto;
    max-width: 61rem;
  }

  .timeline-event-copy {
    padding: 2em;
    top: -1.875em;

    p:not(.timeline-event-thumbnail) {
      padding-bottom: 1.2em;
    }
  }

  h3 {
    text-transform: uppercase;
    font-weight: normal;
    font-size: 1.4em;
    margin-bottom: 0.4em;
  }

  h4 {
    font-size: 1.2em;
    font-weight: normal;
    margin-bottom: 1.2em;
  }

  .timeline-event-thumbnail {
    font-size: 0.9em;
    display: inline-block;
    margin-bottom: 1em;
    text-transform: uppercase;
  }

  .highlight {
    font-weight: bold;
  }

  :global(.dark-mode) .highlight {
    color: var(--color-primary);
  }

  .logo {
    width: 100px;
    float: right;
    margin: 1rem;
    margin-right: 13px;
  }

  .logo-small {
    width: 66px;
    margin-right: 30px;
  }

  .logo-xl {
    width: 126px;
    margin-right: 0px;
  }

  .list {
    display: inline-grid;
  }

  @media screen and (max-width: 600px) {
    .logo {
      float: none;
      margin: 1rem auto;
      display: flex;
    }

    .timeline-event-copy h4 {
      margin-bottom: 0.3rem;
    }
  }
</style>
