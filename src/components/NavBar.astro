---
import MaltLogo from "./MaltLogo.astro";
import SwitchMode from "./Switch.astro";
---

<header>
  <nav class="nav-bar">
    <div class="nav-block nav-left">
      <a href="/">Home</a>
      <a href="/curriculum">Curriculum</a>
      <a href="/projects">Projects</a>
    </div>
    <div class="nav-block nav-right">
      <a
        class="icon icon-gh"
        href="https://github.com/flibustier"
        title="Github"></a
      >
      <a
        class="icon icon-li"
        href="https://linkedin.com/in/jplatteau/"
        title="LinkedIn"></a
      >
      <a href="https://www.malt.fr/profile/jonathanplatteau" title="Malt">
        <MaltLogo class="icon" />
      </a>
      <a class="icon icon-mail" href="mailto:contact@jonathan.pl" title="Email"
        ></a
      >
      <span>
        <SwitchMode />
      </span>
    </div>
  </nav>
</header>

<style>
  header {
    position: relative;
    left: 0;
    right: 0;
    border-bottom: 1px solid;
    background-color: white;
    transition: background var(--transition-speed);
  }

  .nav-bar {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin: 0 auto;
    padding: 0 1rem;
    max-width: 61rem;
    line-height: 3rem;

    a,
    span {
      display: flex;
      align-items: center;
      padding: 0 0.5rem;
      color: inherit;
      text-decoration: none;
      text-transform: uppercase;

      transition: border 0.4s;
      border-bottom: 1px solid transparent;
    }
  }

  @media screen and (max-width: 600px) {
    .nav-bar {
      flex-direction: column-reverse;
      line-height: 2rem;
    }
    .nav-right {
      margin: 1rem 0;
    }
  }

  .nav-block {
    display: flex;
    flex-direction: row;
  }

  .nav-left {
    .nuxt-link-exact-active,
    a:hover {
      border-bottom-color: black;
    }
  }

  .nav-right {
    gap: 0.5rem;
  }

  :global(.dark-mode) {
    header {
      background-color: var(--dark-background-color);
    }

    .nav-left {
      a:hover {
        border-bottom-color: #fbfcfc;
      }
    }
  }
</style>
